
public class methodLab {

	public static void main(String[] args) {
		capitalize("jaSon");
		wheresWaldo("wheres Waldo");
		firstThingsFirst("did","dad");
		reverse("hello");
	}
	public static void capitalize(String word) {
		String first = word.substring(0, 1).toUpperCase();
		String rest = word.substring(1).toLowerCase();
		word = first + rest;
		System.out.println(word);
	}
	public static void wheresWaldo(String phrase) {
		
		System.out.println(phrase.indexOf("Waldo"));
	    
	}

	public static void firstThingsFirst(String a, String b) {
		int wordOne= b.compareTo(a);
		int wordTwo= a.compareTo(b);
		if (wordOne > wordTwo) {
			System.out.println(a + " " + b);
		}
		else {System.out.println(b + " " + a);
			
		}
	}

	public static void reverse(String s) {
		String reversed = "";
		StringBuilder reverseString = new StringBuilder();
		 
		String[] words = reversed.split(" ");       
		 
		for (String word : words) 
		{
		    String reverseWord = new StringBuilder(word).reverse().toString();      
		    reverseString.append(reverseWord + " ");                                
		}
		 
		System.out.println( reverseString.toString().trim() );
	}
